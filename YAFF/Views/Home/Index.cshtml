@{
    ViewData["Title"] = "Home Page";
}
@section scripts{ 
    <script src="~/js/MediaConversion.js"></script>
}
@*<script src="@Url.Content("~/Scripts/MediaConversion.js")"></script>*@
<div class="text-center">
    <h1 class="display-4">Yet Another FFMpeg Frontend</h1>
    <p>It's so easy to use bro</p>
</div>
<div>
    <form id="submitArea">
        <div class="form-group">
            <label for="submitFile">Input File</label>
            <input id ="submitFile" type="file" name="mediaFile" class="form-control-file"  />
            <small class="form-text text-muted">The file to be converted</small>
        </div>
        <div class="form-group">
            <label for="submitOutName">Output File</label>
            <div class="input-group">
                <input id="submitOutName" class="form-control" type="text" />
                <div class="input-group-append" data-toggle="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" id="submitExt" type="button" disabled>Choose output format...</button>
                    <div class="dropdown-menu" id="submitExtDropdown">
                        @*This will be populated with acceptable file types*@
                    </div>
                </div>
            </div>
            <small class="form-text text-muted">The file you will receive</small>

        </div>
        <button id="submitButton" type="button" class="btn btn-primary">Submit</button>
    </form>
</div>
